{{#each global.pages }}
    <div class="{{ @key }}-section" id="{{ @key }}" {{#if image }}style="background-image: url({{ image }});"{{/if}}>
        <div class="{{ @key }}-wrapper">
            <h1 class="{{ @key }}-heading">{{ name }}</h1>
          {{#if description }}
              <div class="{{ @key }}-description-wrapper">
                  <div class="{{ @key }}-description">{{{ description }}}</div>
              </div>
          {{/if}}

          {{# if examples }}
              <div class="{{ @key }}-content-wrapper">
                {{#each examples }}
                    <div class="{{ @key }}-content">
                        <div class="image-wrapper">
                            <img src="{{ image }}" alt="{{ name }}" title="{{ name }}" class="{{ @key }}-image">
                        </div>
                        <h2 class="{{ @key }}-heading">{{ name }}</h2>
                    </div>
                {{/each}}
              </div>
          {{/if}}
          {{#if info }}
            {{#with info }}
                <div class="{{ @key }}-content-wrapper">
                  {{#if social-links }}
                    {{#each social-links }}
                        <div class="social-wrapper">
                            <div class="{{ name }}-wrapper">
                                <a href="{{ link }}" title="{{ name }}" class="{{ name }}">{{{ icon }}}</a>
                            </div>
                        </div>
                    {{/each}}
                  {{/if}}
                </div>
            {{/with}}
          {{/if}}
        </div>
    </div>
{{/each}}



